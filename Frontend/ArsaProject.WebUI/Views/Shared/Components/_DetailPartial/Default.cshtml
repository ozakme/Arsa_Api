@model List<ResultProductDto>
@foreach(var item in Model){
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner bg-light">


                    <div class="carousel-item active">
                        <img class="w-100 h-100" src="../assets/img/surme1.jpg" alt="Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 h-100" src="../assets/img/surme2.jpg" alt="Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 h-100" src="../assets/img/surme3.jpg" alt="Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 h-100" src="../assets/img/surme4.jpg" alt="Image">
                    </div>

                </div>
                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-2x fa-angle-right text-dark"></i>
                </a>
                <p style="color:black; margin-top: 20px;">
                    @item.ProductDescription
                </p>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>Trabzon Sürmene İlçesinde Arsa</h3>

                <h3 class="font-weight-semi-bold mb-4">@item.ProductPrice</h3>
                <p class="mb-4">
                    @item.ProductDescription2
                </p>



                <div class="d-flex align-items-center mb-4 pt-2">
                    <div class="input-group quantity mr-3" style="width: 130px;">
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
}