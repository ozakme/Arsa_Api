@model CreateBookingDto
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Görüşme Talebi Paneli</h6>
            <h1 class="mb-5">Arsanızı Şimdi <span class="text-primary text-uppercase">Seçiniz </span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row ">
                    <div class="col-12 text">
                        <p class="wow fadeIn" data-wow-delay="0.1s">
                            Güvenilir arsa satış ve kiralama hizmetleriyle aradığınız mülke hızlıca ulaşın. Geniş portföyümüzdeki seçeneklerle ihtiyaçlarınıza uygun arsaları bulmanızı sağlıyoruz. Profesyonel ekip, kolay süreç ve müşteri memnuniyeti garantisiyle hizmetinizdeyiz.
                        
                            Lütfen Bilgilerinizi Özenle Giriniz.
                        
                            Talep Ettiğiniz Arsanın Başlığını Yazmanız Önemle Rica Olunur.
                        
                          İcar Ya Da Satılık Arsa Arıyorsanız Arıyorum Başlığını Atarak Bize Ulaşın...
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="AddBooking" asp-controller="Booking">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Adınız Soyadınız">
                                    <label for="name">Adınız Soyadınız</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresiniz">
                                    <label for="email">Mail Adresiniz</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date3" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" asp-for="Checkin" id="checkin" placeholder="Giriş Tarihi" data-target="#date3" data-toggle="datetimepicker" />
                                    <label for="checkin">İcarsa Başlangıç Tarihi</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date4" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" asp-for="CheckOut" id="checkout" placeholder="Çıkış Tarihi" data-target="#date4" data-toggle="datetimepicker" />
                                    <label for="checkout">Bitiş Tarihi</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" id="select1" asp-for="SaleOrRent">
                                        <option value="1">İcar</option>
                                        <option value="2">Satılık</option>
                                        
                                    </select>
                                    <label for="select1">İcar Mı, Satılık Mı ?</label>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Özel İstekler" asp-for="SpecialRequest" id="message" style="height: 100px"></textarea>
                                    <label for="message">Özel İstekler</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>